{
  "name": "dispatcher",
  "version": "1.0.0",
  "author": "Hiago Teixeira <hiagodevsolutions@gmail.com>",
  "description": "Baileys version of whatsapp dispatcher written in typescript.",
  "main": "index.js",
  "scripts": {
    "start": "pnpm build && node --max-old-space-size=4096 dist/index.js",
    "build": "node --max-old-space-size=4096 ./node_modules/typescript/bin/tsc -b",
    "check": "node --max-old-space-size=4096 ./node_modules/typescript/bin/tsc --noEmit",
    "run-prod": "node --max-old-space-size=4096 dist/index.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "fmt": "prettier . --check",
    "fmt:write": "prettier . --write",
    "get-queues": "node dist/tools/getRedisQueue.js",
    "tools:dump-groups": "pnpm build && node dist/tools/dumpGroups.js",
    "tools:add-worker": "pnpm build && node dist/tools/addNewWorker.js",
    "tools:queue-contact-removal": "pnpm build && node dist/tools/queueContactRemoval.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "license": "ISC",
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "baileys": "7.0.0-rc.6",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "qrcode-terminal": "^0.12.0",
    "redis": "^5.8.2",
    "twilio": "^5.8.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.2.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/qrcode-terminal": "^0.12.2",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
