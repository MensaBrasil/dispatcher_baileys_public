# Environment settings for Dispatcher (Baileys WhatsApp)
# Copy this file to `.env` and adjust values as needed.

# General
NODE_ENV=development

# App logging (pino)
# One of: fatal, error, warn, info, debug, trace, silent
LOG_LEVEL=info
# Pretty logs in development. Set to "false" in production.
PRETTY_LOGS=true

# Baileys internal logger level
# One of: fatal, error, warn, info, debug, trace, silent
BAILEYS_LOG_LEVEL=fatal

# Redis
# Host/IP of Redis server
REDIS_HOST=127.0.0.1
# TCP port of Redis server
REDIS_PORT=6379
# Password if Redis requires AUTH (leave empty if not)
REDIS_PASSWORD=

# PostgreSQL
PGHOST=127.0.0.1
PGPORT=5432
PGUSER=postgres
PGPASSWORD=
PGDATABASE=postgres

# Remove task settings
# Comma-separated list of phone numbers that must never be removed
DONT_REMOVE_NUMBERS=
# Comma-separated list of phone numbers that are exceptions for JB split rules
EXCEPTIONS=

# Waiting period in ms used by Twilio warning logic
CONSTANT_WAITING_PERIOD=604800000

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FLOW_SID=
TWILIO_WHATSAPP_NUMBER=

# Scan mode
# Delay between groups (in seconds)
SCAN_DELAY=1

# Action delay between tasks (seconds)
ACTION_DELAY_MIN=1
ACTION_DELAY_MAX=3
ACTION_DELAY_JITTER=0.5

# Main loop cycle interval (minutes)
CYCLE_MINUTES=30

# Enable scan by default without CLI flag
# ENABLE_SCAN=false
